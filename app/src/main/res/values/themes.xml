<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NJamBox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="editText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@font/chillax_regular</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="btnLogin">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:background">@color/blueJB</item>
        <item name="fontFamily">@font/chillax_bold</item>
        <item name="android:textColor">#fff</item>
    </style>
</resources>